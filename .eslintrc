{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "node": true
  },
  "rules": {
    "no-extra-parens": 2,

    "strict": [2, "global"],

    "func-style": [2, "expression"],
    "indent": [2, 2],
    "no-multiple-empty-lines": [2, { "max": 2 }],
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "always"]
  }
}
